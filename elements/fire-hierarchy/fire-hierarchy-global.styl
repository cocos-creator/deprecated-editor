html /deep/ {
    hierarchy-tree[focused] {
        hierarchy-item[selected]::shadow {
            #bar {
                background: #059
            }
        }
    }
    // calculate by .fold-icon.(width+marginRight)
    hierarchy-item>hierarchy-item {
        margin-left: 12px
    }

    hierarchy-item::shadow fire-ui-text-input {
        position: absolute
        left: 9px
        top: -1px
        height: 18px
        width: calc(100% - 9px)

        &[icon] {
            left: 27px;
            width: calc(100% - 27px)
        }

        &::shadow .input-area {
            padding: 0px 1px
        }
    }
}
