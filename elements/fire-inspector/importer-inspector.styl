:host {
    display: flex
    flex-direction: column
    flex-wrap: nowrap
    align-items: stretch

    font-size: 12px
    margin-top: 2px

    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
    color: #aaa
    cursor: default
    outline: none
}

.fields {
    overflow-x: hidden
    overflow-y: auto
    position: relative
}

span.space {
    display: block
    height: 1px
}

fire-ui-splitter::shadow {
    .bar {
        background: #333
    }
}

fire-ui-toolbar {
    height: 20px

    .asset-name {
        overflow-x: hidden
    }

    fire-ui-button {
        .fa-close {
            color: #f00

            &:hover {
                color: #f00
            }

            &:active {
                color: #f00
            }
        }

        .fa-check {
            color: #0f9

            &:hover {
                color: #0f9
            }

            &:active {
                color: #0f9
            }
        }

        &[disabled] {
            .fa-close, .fa-check {
                color: inherit
            }
        }
    }
}
