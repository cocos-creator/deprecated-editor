:host {
    z-index: 999
    background: rgb(58,58,58)
    position: absolute
    left: 50%
    width: 400px
    height: 600px
    margin-left: -185px
    font-family: Helvetica,Arial,sans-serif
    top: 50%
    margin-top: -300px
    box-shadow:  0 0 8px 8px rgba(0,0,0,0.2)
    border-radius: 3px
    border: 1px solid rgb(30,30,30)
    border-top: 1px solid rgb(70,70,70)
    color: rgb(190,190,190)
    .topbar {
        width: 100%
        float: left
        height: 45px
        border-bottom: 1px solid rgb(70,70,70)
        span {
            margin: 0px
            padding: 0px
            margin-left: 10px
            line-height: 45px
        }

        fire-ui-button {
            float: right
            margin-top: 10px
            margin-right: 10px
        }
    }

    .scroll {
        width:100%
        height:554px
        overflow-y:scroll
        overflow-x:hidden
        float:left
    }

    .content {
        width: 395px
        height: auto
        float: left
        background: rgb(233,233,233)
        .title {
            width: 380px
            margin: 10px
            height: 20px
            line-height: 10px
            float: left
            border-bottom: 1px solid gray
        }
        .item {
            padding-left: 15px
            padding-right: 15px
            width: 100%
            height: auto
            color: rgb(58,58,58)
            font-size: 14px
            margin-top: 10px
        }
    }

}
